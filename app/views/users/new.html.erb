<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
      <p>Nous n'avons pas réussi à créer l'utilisateur pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
     <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>  
<% end %>

<div class="text-center">
  <h1>Register here:</h1>
</div>


<div class="container">
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group">
      <%= label_tag 'First name' %>
      <%= text_field_tag 'first_name', '', class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <%= label_tag 'Last name' %>
      <%= text_field_tag 'last_name', '', class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <%= label_tag 'Description' %>
      <%= text_area_tag 'description', '', class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <%= label_tag 'Age' %>
      <%= number_field_tag 'age', '', class: 'form-control' %>
    </div>
    <br>
    <div class="form-group mt-3">
      <%= label_tag 'City' %>
      <%= text_field_tag 'city_id', '', class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <%= label_tag 'Email' %>
      <%= text_field_tag 'email', '', class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <%= label_tag 'Password' %>
      <%= password_field_tag 'password', '', class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <%= label_tag 'Password confirmation' %>
      <%= password_field_tag 'password_confirmation', '', class: 'form-control' %>
    </div>
    <br>
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  <% end %> 
</div>
