<% flash.each do |type, msg| %>
  <div class="alert alert-success my-3" role="alert">
    <%= msg %>
  </div>
<% end %>

<br>
<div class="text-center">
<h1>Welcome to The Gossip Project!</h1>
<br>
<a href="<%= new_gossip_path %>" class="btn btn-primary">Create a New Gossip</a>
</div>
<br>
<div class="text-center">
  <p>Here are our juicy gossips:</p>
</div>


<div class="container">
  <div class="list-group">
    <% @gossips.each do |gossip| %>
      <div class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= gossip.title %> Gossip nÂ°<%= gossip.id%></h5>
          <small>3 days ago</small>
        </div>
        
        <small>Author of the gossip: <%= link_to "#{gossip.user.first_name}",{controller: "users", action: "show", id: gossip.id} %></small>
    
        <p class="mb-1"><%= link_to "Read the gossip", {controller: "gossips", action: "show", id: gossip.id}, class: "btn btn-secondary mt-3" %></p>
      </div>
    <% end %>
  </div>
</div>
