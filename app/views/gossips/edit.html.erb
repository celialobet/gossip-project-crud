<h1>Edit a Gossip</h1>

<%= form_for @gossip do |f|%>

<div class="container">
    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <label>Content</label>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Edit the Gossip</button>
    </div>
  </div>
<% end %>